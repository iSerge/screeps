{
  "extends" : "tslint:latest",
  "rules": {
    "interface-name": [ "never-prefix" ],
    "no-console": false,
    "no-namespace": false,
    "no-string-literal": false,
    "no-trailing-whitespace": false,
    "quotemark": [true, "double", "avoid-escape"],
    "trailing-comma": [
      true,
      {"singleline": "never",
      "multiline": "never"}
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
